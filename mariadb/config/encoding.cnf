[client]
# MySQL 클라이언트의 기본 문자셋을 utf8mb4로 설정합니다.
default_character_set=utf8mb4

[mysql]
# MySQL 명령줄 클라이언트의 기본 문자셋을 utf8mb4로 설정합니다.
default_character_set=utf8mb4

[mysqld]
# 서버에서 사용하는 기본 문자셋을 utf8mb4로 설정합니다.
character_set_server=utf8mb4
# 서버에서 사용하는 기본 collation을 utf8mb4_unicode_ci로 설정합니다.
collation_server=utf8mb4_unicode_ci
# 새로운 연결 시, collation을 utf8mb4_unicode_ci로 설정하는 SQL 명령을 실행합니다.
init_connect="SET collation_connection=utf8mb4_unicode_ci"
# 클라이언트와 서버 간의 문자셋 협상을 비활성화하여 서버 설정을 강제로 사용하도록 합니다.
skip-character-set-client-handshake

[mysqldump]
# mysqldump에서 사용하는 기본 문자셋을 utf8mb4로 설정합니다.
default-character-set=utf8mb4
